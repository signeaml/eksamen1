<h3>Filter:</h3>
<hr />
<div class="filter-menu">
  <div class="filter-item">
    <button class="filter-title">Kunstner</button>
    <div class="filter-content">
      <label><input type="checkbox" name="artist1" /> Kunstner 1</label>
      <label><input type="checkbox" name="artist2" /> Kunstner 2</label>
      <label><input type="checkbox" name="artist3" /> Kunstner 3</label>
    </div>
  </div>
  <hr />
  <div class="filter-item">
    <button class="filter-title">Pris</button>
    <div class="filter-content">
      <label><input type="checkbox" name="price1" /> Under 500 kr</label>
      <label><input type="checkbox" name="price2" /> 500 - 1000 kr</label>
      <label><input type="checkbox" name="price3" /> Over 1000 kr</label>
    </div>
  </div>
  <hr />
  <div class="filter-item">
    <button class="filter-title">St√∏rrelse</button>
    <div class="filter-content">
      <label><input type="checkbox" name="size1" /> Lille</label>
      <label><input type="checkbox" name="size2" /> Mellem</label>
      <label><input type="checkbox" name="size3" /> Stor</label>
    </div>
  </div>
  <hr />
  <div class="filter-item">
    <button class="filter-title" id="kategori">Kategori</button>
    <div class="filter-content">
      <label><input type="checkbox" name="category1" /> Maleri</label>
      <label><input type="checkbox" name="category2" /> Skulptur</label>
      <label><input type="checkbox" name="category3" /> Tegning</label>
    </div>
  </div>
  <hr />
</div>

<style>
  .filter-menu {
    margin: 0 auto;
  }

  .filter-item {
    margin-bottom: 10px;
  }

  .filter-title {
    background-color: #fffbf6;
    color: #667183;
    padding: 10px 0 10px 0;
    text-align: left;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s;
    font-family: "Inter", sans-serif;
    width: 300px;
    font-size: 15px;
    border: none;
  }

  .filter-title:hover {
    text-decoration: underline;
  }

  .filter-content {
    display: none;
    padding: 10px;
    font-family: "Inter", sans-serif;
    border-top: none;
  }

  .filter-content label {
    display: block;
    margin-bottom: 5px;
  }
  h3 {
    font-family: "Inter", sans-serif;
    color: #293750;
  }
  .filter-content label {
    color: #293750;
  }

  hr {
    display: block;
    width: 125px;
    height: 2px;
    background: var(--farve2);
    border: 0;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const filterTitles = document.querySelectorAll(".filter-title");

    filterTitles.forEach((title) => {
      title.addEventListener("click", function () {
        const content = this.nextElementSibling;
        const isOpen = content.style.display === "block";
        document
          .querySelectorAll(".filter-content")
          .forEach((item) => (item.style.display = "none"));
        if (!isOpen) {
          content.style.display = "block";
        }
      });
    });
  });
</script>
