---
import "/src/styles/general.css";
---

<section>
  <div class="footer_tekst">
    <div class="footer_tekst1">
      <p>SKITSE</p>
      <p class="adresse">Ryesgade 5, 2200 København N</p>
    </div>
    <div class="footer_tekst2">
      <p>
        Tlf. 81 77 50 57 - <a href="mailto:info@skitse.nu">info@skitse.nu</a>
      </p>
      <p>Åbningstider: Onsdag - fredag kl 12-18, Lørdag kl 11-15</p>
    </div>
  </div>
  <div class="grid_1_1_1">
    <p>Levering - 50 KR</p>
    <p>14 dages returret</p>
    <p>Hurtig afsendelse</p>
  </div>
  <div class="socialemedier">
    <a href="https://instagram.com/skitse.nu">
      <img src="/medier/insta.svg" alt="instalogo" /></a
    >
    <a href="https://www.facebook.com/skitse">
      <img src="/medier/facebook.svg" alt="facelogo" /></a
    >
  </div>
</section>

<style>
  p {
    text-align: center;
    line-height: 25px;
  }

  .socialemedier {
    display: flex;
    flex-direction: row;
    justify-content: center;
    padding-top: 50px;
    padding-bottom: 50px;
    gap: 10px;
  }

  .socialemedier img {
    height: 30px;
    width: 30px;
  }

  .grid_1_1_1 {
    display: flex;
    justify-content: center;
    gap: 40px;
  }
  .grid_1_1_1 p {
    color: #667183;
  }

  @media (min-width: 800px) {
    .footer_tekst1,
    .footer_tekst2 {
      display: grid;
      grid-template-columns: 1fr 1fr;
      text-align: left;
    }

    .footer_tekst {
      display: flex;
      justify-content: center;
    }
  }
</style>
